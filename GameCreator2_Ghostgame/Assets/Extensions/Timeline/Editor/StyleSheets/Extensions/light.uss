InstructionsMarker {
    width: 18px;
    height: 18px;
    background-color: red;
    background-image: resource("Assets/Plugins/GameCreator/Extensions/Timeline/Editor/StyleSheets/Icons/Instructions_Light_Collapse.png");
    -unity-background-scale-mode: scale-to-fit;
}

InstructionsMarker:checked
{
    background-image: resource("Assets/Plugins/GameCreator/Extensions/Timeline/Editor/StyleSheets/Icons/Instructions_Light_Normal.png");
}

InstructionsMarker:hover:focus:checked
{
    background-image: resource("Assets/Plugins/GameCreator/Extensions/Timeline/Editor/StyleSheets/Icons/Instructions_Light_Active.png");
}